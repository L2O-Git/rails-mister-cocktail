<h2><%= @cocktail.name %></h2>
<%= link_to "Back to all cocktails", root_path %>

<ul class="list-group">
  <p>Recipe :</p>
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %></li>
  <% end %>
</ul><br>

<% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td><br>
              <td><%= dose.description %></td><br>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>

<%= link_to 'Add a dose', new_cocktail_path(params[:id])%>
